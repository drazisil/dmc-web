{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2022",
        "jsx": "react-jsx",
        "strict": true,
        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "./types",
        "checkJs": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitAny": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}